doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
  link(rel='apple-touch-icon' sizes='76x76' href='assets/img/apple-icon.png')
  link(rel='icon' type='image/png' href='assets/img/favicon.png')
  title Carta Pinkberry
  meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport')
  meta(name='viewport' content='width=device-width')
  // CSS Files
  link(href='assets/css/bootstrap.min.css' rel='stylesheet')
  link(href='assets/css/paper-bootstrap-wizard.css' rel='stylesheet')
  link(rel='stylesheet' href='assets/css/trabajador.css')
  // Fonts and Icons
  link(href='https://netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.css' rel='stylesheet')
  link(href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css')
  link(href='assets/css/themify-icons.css' rel='stylesheet')
#app2
  section
    header
      img.logo(src='assets/img/logoHorizontalPink.png' alt='logo pinkberry')
      h3 TRABAJADOR
    main
      div(v-for="(item, index) in mensajes")
        img.ice-cream(src='assets/img/cupLarge.png' alt='large cup')
        col-12 
          div
              row-form
                p Pedido de:
                span.form-control(name='resultado' type='text' placeholder='Resultado') {{ item.nombre }}   
              row-form
                p Tama&ntilde;o de cup:
                span.form-control(name='resultado' type='text' placeholder='Resultado') {{ item.tamano }}
              row-form
                p Toppings:
                span.form-control(name='resultado' type='text' placeholder='Resultado') {{item.deluxe[0]}}
              row-form
                p Sabores elegidos:
                span.form-control(name='resultado' type='text' placeholder='Resultado') {{item.sabor[0]}}
              button ok
// Core JS Files
script(src='assets/js/jquery-2.2.4.min.js' type='text/javascript')
script(src='assets/js/bootstrap.min.js' type='text/javascript')
script(src='assets/js/jquery.bootstrap.wizard.js' type='text/javascript')
// Plugin for the Wizard
script(src='assets/js/demo.js' type='text/javascript')
script(src='assets/js/paper-bootstrap-wizard.js' type='text/javascript')
// More information about jquery.validate here: https://jqueryvalidation.org/
script(src='assets/js/jquery.validate.min.js' type='text/javascript')
script(src='https://cdn.jsdelivr.net/npm/vue/dist/vue.js')
script(src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js')
script.
  var app = new Vue({
    el: '#app2', 
    data: {
      mensajes: []
    },
    mounted() {
      this.getmessage();
    },
    methods: {
      getmessage() {
        axios.get('/recibir')
          .then(resp => {
            console.log(resp.data)
            this.mensajes = resp.data
          })
      }
    }
  })


    
