doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
    link(rel='apple-touch-icon' sizes='76x76' href='assets/img/apple-icon.png')
    link(rel='icon' type='image/png' href='assets/img/favicon.png')
    title Carta Pinkberry
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport')
    meta(name='viewport' content='width=device-width')
    // CSS Files
    link(href='assets/css/bootstrap.min.css' rel='stylesheet')
    link(href='assets/css/paper-bootstrap-wizard.css' rel='stylesheet')
    // CSS Just for demo purpose, don't include it in your project
    link(href='assets/css/demo.css' rel='stylesheet')
    // Fonts and Icons
    link(href='https://netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.css' rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css')
    link(href='assets/css/themify-icons.css' rel='stylesheet')
  body
    // Big container
    .container
      .row
        .col-sm-12
          .wizard-container
            #wizardProfile.card.wizard-card(data-color='orange')
              form(action='' method='')
                .wizard-header.text-center
                  img(src='assets/img/logoHorizontalPink.png' alt='' width='400' height='120')
                  h3.wizard-title CARTA PINKBERRY
                  img(src='' alt='')
                .wizard-navigation
                  .progress-with-circle
                    .progress-bar(role='progressbar' aria-valuenow='1' aria-valuemin='1' aria-valuemax='3' style='width: 21%;')
                  ul
                    li
                      a(href='#home' data-toggle='tab')
                        .icon-circle
                          i.ti-user
                        | 											Inicio
                    li
                      a(href='#paso1' data-toggle='tab')
                        .icon-circle
                          i.ti-settings
                        | 											Paso 1
                    li
                      a(href='#paso2' data-toggle='tab')
                        .icon-circle
                          i.ti-map
                        | 											Paso 2
                    li
                      a(href='#paso3' data-toggle='tab')
                        .icon-circle
                          i.ti-map
                        | 											Paso 3
                    li
                      a(href='#final' data-toggle='tab')
                        .icon-circle
                          i.ti-map
                        | 											Final
                .tab-content
                  #home.tab-pane
                    // Home
                    .row
                      h3.info-text  Ingrese sus datos personales
                      .col-sm-4.col-sm-offset-1
                        .picture-container
                          .picture
                            img#wizardPicturePreview.picture-src(src='assets/img/default-avatar.jpg' title='')
                            input#wizard-picture(type='file')
                          h6 Choose Picture
                      .col-sm-6
                        .form-group
                          label
                            | Nombres 
                            small (required)
                          input.form-control(name='firstname' type='text' placeholder='Andrew...')
                        .form-group
                          label
                            | Apellidos 
                            small (required)
                          input.form-control(name='lastname' type='text' placeholder='Smith...')
                  // Paso 1
                  #paso1.tab-pane
                    h3.info-text Elige tu tamaño
                    .row
                      .col-sm-8.col-sm-offset-2
                        .col-sm-4
                          .row
                            .form-check(data-toggle='wizard-checkbox')
                              input.form-check-input(type='radio' name='jobb' value='Grande')
                              .card.card-hover-effect.m-5(style='justify-content: center')
                                img(src='assets/img/paso 1/pequeño.jpg' width='53' height='')
                                p
                                  | Pequeño
                                p
                        .col-sm-4
                          .form-check(data-toggle='wizard-checkbox')
                            input.form-check-input(type='radio' name='jobb' value='Mediano')
                            | Mediano
                            .card.card-hover-effect(style="width:'';height: 100%")
                              img(src='assets/img/paso 1/mediano.jpg' width='content' height='100%')
                              i.ti-pencil-alt
                        .col-sm-4
                          .form-check(data-toggle='wizard-checkbox')
                            input.form-check-input(type='radio' name='jobb' value='Grande')
                            .card.card-hover-effect
                              i.ti-star
                              p Grande
                  // Paso 2
                  #paso2.tab-pane
                    h3.info-text Elige tu sabor preferido
                    .row
                      .col-sm-8.col-sm-offset-2
                        .col-sm-4
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Design')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-paint-roller
                              p Original
                        .col-sm-4
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Code')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-pencil-alt
                              p Fresa
                        .col-sm-4
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Develop')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-star
                              p Maracuya
                    .row
                      .col-sm-8.col-sm-offset-2
                        .col-sm-4
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Design')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-paint-roller
                              p Chocolate
                        .col-sm-4
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Code')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-pencil-alt
                              p Mango-Coco
                        .col-sm-4
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Develop')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-star
                              p Lúcuma
                  // Paso 3
                  #paso3.tab-pane
                    h3.info-text Elige tu toppings
                    // Frutas
                    h5(align='left') Frutas
                    .row
                      .col-sm-8.col-sm-offset-2
                        .col-sm-3
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Design')
                            .card.card-checkboxes.card-hover-effect(style='width:auto')
                              i.ti-paint-roller  
                              p Sandia
                        .col-sm-3
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Code')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-pencil-alt
                              p Fresas
                        .col-sm-3
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Develop')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-star
                              p Arandano
                        .col-sm-3
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Develop')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-star
                              p piña
                    // Secos
                    h5(align='left') Secos
                    .row
                      .col-sm-8.col-sm-offset-2
                        .col-sm-3
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Design')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-paint-roller
                              p Cookies
                        .col-sm-3
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Code')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-pencil-alt
                              p brownie
                        .col-sm-3
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Develop')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-star
                              p chips
                        .col-sm-3
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Develop')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-star
                              p Morocha
                    // Deluxe
                    h5(align='left') Deluxe
                    .row
                      .col-sm-8.col-sm-offset-2
                        .col-sm-6
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Design')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-paint-roller
                              p M&M
                        .col-sm-6
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Code')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-pencil-alt
                              p Nutella
                    // Líquidos
                    h5(align='left') Líquidos especiales
                    .row
                      .col-sm-8.col-sm-offset-2
                        .col-sm-4
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Design')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-paint-roller
                              p Fudge
                        .col-sm-4
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Code')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-pencil-alt
                              p Dulce de leche
                        .col-sm-4
                          .choice(data-toggle='wizard-checkbox')
                            input(type='checkbox' name='jobb' value='Code')
                            .card.card-checkboxes.card-hover-effect
                              i.ti-pencil-alt
                              p Miel
                  // Final
                  #final.tab-pane(style='justify-content: center; justify-self: center; align-items: center;align-self: center; justify-items: center;')
                    div(style='justify-content: center; justify-self: center; align-items: center;align-self: center; justify-items: center;')
                      h5.info-text Listo para enviarse
                      .info-text
                        img(src='assets/img/check.png' width='300' height='300')
                  .wizard-footer
                    .pull-right
                      input.btn.btn-next.btn-fill.btn-warning.btn-wd(type='button' name='next' value='Siguiente')
                      input.btn.btn-finish.btn-fill.btn-warning.btn-wd(type='button' name='finish' value='Finalizar')
                    .pull-left
                      input.btn.btn-previous.btn-default.btn-wd(type='button' name='previous' value='Anterior')
                    .clearfix
      // Core JS Files
      script(src='assets/js/jquery-2.2.4.min.js' type='text/javascript')
      script(src='assets/js/bootstrap.min.js' type='text/javascript')
      script(src='assets/js/jquery.bootstrap.wizard.js' type='text/javascript')
      // Plugin for the Wizard
      script(src='assets/js/demo.js' type='text/javascript')
      script(src='assets/js/paper-bootstrap-wizard.js' type='text/javascript')
      // More information about jquery.validate here: https://jqueryvalidation.org/
      script(src='assets/js/jquery.validate.min.js' type='text/javascript')
