script.
  var app = new Vue({
    el: '#app', 
    data: {
      mensaje: {
        nombre: '',
        apellido: '',
        tamano: '',
        sabor: [],
        frutas: [],
        secos: [],
        deluxe: [],
        liquido: []
      }
    },
    methods: {
      sendmessage() {
        const messagestring = JSON.stringify(this.mensaje)
        console.log("mandando mensaje en front", messagestring)
        axios.post('/envio', {
          msjstring: messagestring,
        })
          .then(resp => {
            const response = resp.mensaje
          })
      }
    }
